<?xml version="1.0" encoding="UTF-8"?>
<blueprint
	xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:shell="http://karaf.apache.org/xmlns/shell/v1.0.0"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0
		https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		http://karaf.apache.org/xmlns/shell/v1.0.0
		http://karaf.apache.org/xmlns/shell/v1.0.0">

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="flyway/migrate">
            <action class="org.flywaydb.core.osgi.karaf.FlywayMigrateCommand" />
            <completers>
                <ref component-id="migrationCompleter"/>
                <null/>
            </completers>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="flyway/clean">
            <action class="org.flywaydb.core.osgi.karaf.FlywayCleanCommand" />
            <completers>
                <ref component-id="migrationCompleter"/>
                <null/>
            </completers>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="flyway/info">
            <action class="org.flywaydb.core.osgi.karaf.FlywayInfoCommand" />
            <completers>
                <ref component-id="migrationCompleter"/>
                <null/>
            </completers>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="flyway/repair">
            <action class="org.flywaydb.core.osgi.karaf.FlywayRepairCommand" />
            <completers>
                <ref component-id="migrationCompleter"/>
                <null/>
            </completers>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="flyway/baseline">
            <action class="org.flywaydb.core.osgi.karaf.FlywayBaselineCommand" />
            <completers>
                <ref component-id="migrationCompleter"/>
                <null/>
            </completers>
        </command>

    </command-bundle>

    <bean id="migrationCompleter" class="org.flywaydb.core.osgi.karaf.FlywayMigrationCompleter">
    	<property name="flywayBundleService" ref="flywayBundleService" />
    	<property name="bundleContext" ref="blueprintBundleContext" />
    </bean>

    <reference id="flywayBundleService" interface="org.flywaydb.core.osgi.FlywayBundleService" />

</blueprint>